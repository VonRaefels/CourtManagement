<!DOCTYPE html>
<html>
    <head>
        <title>Reserva de Pistas!</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- Bootstrap -->
        <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
        <link href="css/login.css" rel="stylesheet">
        <link href="css/select2-bootstrap.css" rel="stylesheet">
        <link href="css/select2.css" rel="stylesheet">
        <link  href="css/base.css" rel="stylesheet">

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="../../assets/js/html5shiv.js"></script>
        <script src="../../assets/js/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <div  class="container" id="main-content">
            <div class="page-header">
                <h1>Tus Pistas <small>login</small></h1>
            </div>
            <p class="lead">Reserva tus pistas, haz login!</p>
            <form id="login-form" class="form-horizontal col-md-5">
                <div class="form-group">
                    <label class="col-md-4 control-label lbl-input" for="urb">Urbanización: </label>
                    <div class="col-md-8">
                        <div class="input-group">
                            <span class="input-group-addon glyphicon glyphicon-home"></span>
                            <select id="urbas" class="">
                            <% urbas.forEach(function(urba, index) { %>
                                <option value="<%= urba.value %>"><%= urba.name %></option>
                            <% }); %>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label lbl-input" for="username">Usuario: </label>
                    <div class="col-md-8">
                        <div class="input-group">
                            <span class="input-group-addon glyphicon glyphicon-user"></span>
                            <input id="username" name="username" class="form-control input-lg" >
                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label lbl-input" for="password">Contraseña: </label>
                    <div class="col-md-8">
                        <div class="input-group">
                            <span class="input-group-addon glyphicon">*</span>
                            <input id="password" name="password" class="form-control input-lg" type="password" placeholder="">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="button" class="col-md-offset-1 btn btn-primary" id="login-btn">LogIn</button>
                </div>
            </form>
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
            <script src="js/lib/bootstrap.min.js"></script>
            <script src="js/lib/select2.min.js"></script>
            <script src="js/lib/select2_locale_es.js"></script>
            <script src="js/login.js"></script>
        </div>
    </body>
</html>

