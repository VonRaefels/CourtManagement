<!DOCTYPE html>
<html>
    <head>
        <title>Reserva de Pistas!</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- Bootstrap -->
        <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
        <link href="css/login.css" rel="stylesheet">
        <link  href="css/base.css" rel="stylesheet">

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="../../assets/js/html5shiv.js"></script>
        <script src="../../assets/js/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <div  class="container" id="main-content">
            <div class="page-header">
                <h1>Tus Pistas <small>login</small></h1>
            </div>
            <form class="form-horizontal" action="/api/login" method="POST">
                <div class="form-group">
                    <label class="col-md-2 control-label lbl-input" for="urb">Urbanización: </label>
                    <div class="col-md-3">
                        <input id="urbas" name="text" class="typeahead form-control input-lg" type="text" placeholder="urbanización">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label lbl-input" for="number">Número: </label>
                    <div class="col-md-1">
                        <input id="number" name="number" class="form-control input-lg" type="number" placeholder="Nº">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label lbl-input" for="password">Contraseña: </label>
                    <div class="col-md-3">
                        <input id="password" name="password" class="form-control input-lg" type="password" placeholder="contraseña">
                    </div>
                </div>
            </form>
            <script>
                urbas = <%- JSON.stringify(urbas) %>;
            </script>
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
            <script src="js/lib/bootstrap.min.js"></script>
            <script src="js/lib/typeahead.min.js"></script>
            <script src="js/login.js"></script>
        </div>
    </body>
</html>

